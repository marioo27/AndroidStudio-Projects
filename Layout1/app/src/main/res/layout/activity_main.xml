<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:gravity="center">

    <!-- Texto superior centrado: "LAYOUT 1 (LINEAR)" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAYOUT 1 (LINEAR)"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="16dp"/>

    <!-- Elemento "LEFT" alineado a la izquierda, con margen superior para separación del título -->
    <TextView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#99ff99"
        android:padding="16dp"
        android:text="LEFT"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="start"
        android:layout_marginTop="50dp"/>

    <!-- Elemento "CENTER" centrado -->
    <TextView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#00ff00"
        android:padding="16dp"
        android:text="CENTER"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"/>

    <!-- Elemento "RIGHT" alineado a la derecha -->
    <TextView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#99ff99"
        android:padding="16dp"
        android:text="RIGHT"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="end"/>

    <!-- Texto en la esquina inferior derecha: "MGR" con margen extra -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MGR"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>
</LinearLayout>
